---
title: Aid Information Platform
---

<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.gif" alt="UK aid from the British people">
        <div>
            <h1>
                <span>AID PLATFORM</span>
                <%= project['name'] %><span>[<%= code %>]</span>
            </h1>
        </div>
    </div>
</div>


<div class="row">
    <div class="twelve columns">
        <div id="search-bar">
            <form action="/projects" method="GET">
                <label for="query">
                    <h3>Search Projects</h3>
                    <input id="query" name="query" type="text" placeholder="e.g. location, sector, organisation or keyword" value="">
                </label>
                <input type="submit" value="Search" class="button">
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="twelve columns">
        <h3 class="section-group-title">Summary</h3>
        <p class="description"><%= project['summary'] %></p>
    </div>
</div>

<div class="row">
    <div class="six columns">

            <h3 class="section-group-title">Funding - <%= project['funding'] %></h3>
            <div id="funding-progress" style="height: 150px;" class="progress">
            </div>

       
            <h3 class="section-group-title">Status - <%= project['status'] %></h3>
            <div id="time-progress" style="height: 150px;" class="progress">
            </div>
    </div>

    <div class="six columns">

        <script src="/javascripts/leaflet/leaflet.js" type="text/javascript"></script>
        <script src="/javascripts/leaflet/world.js" type="text/javascript"></script>
        <link rel="stylesheet" href="@routes.Assets.at("javascripts/leaflet/leaflet.css")" />

        <img src="/images/generic-map.gif">

        <link rel="stylesheet" href="/stylesheets/MarkerCluster.css" />
        <link rel="stylesheet" href="/stylesheets/MarkerCluster.Default.css" />

        <div class="chart-disclaimer" style="margin-top:-11%;">
            <p><strong>Disclaimer</strong>: Country borders do not necessarily reflect the UK Government's official position.</p>
        </div>
    </div>

</div>

<div class="row">
    <div class="six columns">
        <h3 class="section-group-title">Sector groups</h3>
        <div id="sectorChart" style="float:left;"></div>
        <div id="sectorLegend" style="float:left;">
            <table>
                <% project["sector-groups"].each do |sector| %>
                    <tr class="legend-item">
                        <td>
                            <span class="legend-color"></span>
                            <span class="truncate" style="width: 155px;" title="<%= sector['name'] %>"> <%= sector['name'] %> </span>
                        </td>
                        <td><%= sector['percentage'] %>%</td>
                    </tr>
                <% end %>
            </table>

        </div>
    </div>
    <div class="six columns">
        <h3 class="section-group-title">Project budget vs actual spend</h3>
    </div>
</div>

<div class="row">
    <div class="twelve columns">
        <h3 class="section-group-title">Partner budget split</h3>
        <div id="partnerChart" style="float:left;"></div>
        <div id="partnerLegend" style="float:left;">
            <table>
                <% project["partner-split"].each do |partner| %>
                    <tr class="legend-item">
                        <td>
                            <span class="legend-color"></span>
                            <span class="truncate" style="width: 155px;" title="<%= partner['name'] %>"> <%= partner['name'] %> </span>
                        </td>
                        <td><%= partner['percentage'] %>%</td>
                    </tr>
                <% end %>
            </table>

        </div>
    </div>
</div>

<script src="/javascripts/donut.js"></script>
<script src="/javascripts/progress.js"></script>
<script src="/javascripts/bar.js"></script>
<script>

    (function(){
    var sectors = <%= project["sector-groups"].to_json %>
    charts.donut("#sectorChart", sectors, function(d) { 
      return d.percentage; 
    }, function(d){ 
      return d.name 
    }, function(d) { 
      return d.percentage + " projects"; 
    });

    charts.donutLegend("#sectorLegend", ".legend-color", 14, sectors, function(d){ return d.name });

    var partners = <%= project["partner-split"].to_json %>
    charts.donut("#partnerChart", partners, function(d) { 
      return d.percentage; 
    }, function(d){ 
      return d.name 
    }, function(d) { 
      return d.percentage + " partners"; 
    });

    charts.donutLegend("#partnerLegend", ".legend-color", 14, partners, function(d){ return d.name });

    var funding = [ {label: "", text: "", value: 0},
                    {label: "Budget spend to date", text: "£<%= project["budget-spent"] %>", value: <%= project["budget-spent"] %>},
                    {label: "Project budget", text: "£<%= project["budget-set"] %>", value: <%= project["budget-set"] %>}]

    charts.progressBar("#funding-progress", funding, function(d) { return d.value; }, function(d) { return d.label; }, function(d) { return d.text; });



    var time = [{ label: "Start", text: "<%= project["start-date"] %>", value: <%= (DateTime.parse(project["start-date"]).to_f * 1000.0).to_i %>},
                         {label: "Progress by time", text: "", value: <%= (DateTime.now.to_f * 1000.0).to_i %>},
                         {label: "End", text: "<%= project["end-date"] %>", value: <%= (DateTime.parse(project["end-date"]).to_f * 1000.0).to_i %> }];

    charts.progressBar("#time-progress", time, function(d) { return d.value; }, function(d) { return d.label; }, function(d) { return d.text; });


    })()

</script>