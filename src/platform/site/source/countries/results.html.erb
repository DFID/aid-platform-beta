---
title: UK Aid Information Platform
---

<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.png" alt="UK aid from the British people">
        <div>
            <div class="breadcrumb">
                <ul>
                    <li><a href="/index.html">Home</a></li>
                    <li><a href="/location/country/index.html">Aid by Location</a></li>
                    <li><%= country['name'] %></li>
                </ul>
            </div>
            <h1>
                <img src="/images/flags/<%= country['code'].downcase%>.png" alt=""><%= country['name'] %></small>
            </h1>
        </div>
    </div>
</div>

<%= partial "partials/countries-tabs", :locals => { :active => "results", :country => country, :project_count => projects.size, :results_count => results.size } %>

<div class="row">
    <div class="twelve columns content results-info">
        <h3 class="section-group-title">What DFID has achieved
            <p style="margin-bottom:2px;"><a href="https://www.gov.uk/government/organisations/department-for-international-development/series/dfid-annual-report-2011-2012">(Source: DFID Annual Report 2011-2012)</a></p>
        </h3>

        <% results.each do |result| %>
        <div class="row">
            <div class="four columns summary">
                <h3><%= result['_id'] %></h3>     
            </div>
            <div class="eight columns">
                <ul>
                    <% result['countryResult'].each_with_index do |result_description, index| %>
                    <li><%= result_description %><span><%=number_with_delimiter(result['resultTotal'][index], :delimiter => ',') %></span></li>
                    <% end %>
                </ul> 
            </div>
        </div>
        <% end %>
    </div>   
</div>


