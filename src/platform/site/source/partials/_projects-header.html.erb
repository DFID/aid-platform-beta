<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.gif" alt="UK aid from the British people">
        <div>
            <h1>
                <span>AID PLATFORM</span>
                <%= project['title'] %><span>[<%= project['iatiId'] %>]</span>
            </h1>
        </div>
    </div>
</div>

<%= partial "partials/search-bar" %>

<div class="row">
    <div class="twelve columns">
        <div class="tab-bar-container">
            <div class="row">
                <div id="tab-links">
                    <% if is_dfid_project project['iatiId'] then %>
                    <a href="http://projects.dfid.gov.uk/iati/Project/<%= project['iatiId'][5, project['iatiId'].length] %>">IATI Data Set</a>
                    <% end %>
                    <form action="/fraud" method="GET" >
                        <input type="submit" value="Report Fraud" class="button serious"/>
                    </form>
                </div>
                <div class="projects-nav">
                    <nav>
                        <ul class="tab-bar">
                            <li <%= active=="summary" ? "class='active'" : ""%>><a href="/projects/<%=project['iatiId']%>">Summary</a></li>
                            <li <%= active=="documents" ? "class='active'" : ""%>><a href="/projects/<%=project['iatiId']%>/documents">Documents</a></li>
                            <li <%= active=="transactions" ? "class='active'" : ""%>><a href="/projects/<%=project['iatiId']%>/transactions">Transactions</a></li>
                            <% if has_funded_projects then %>
                                <li <%= active=="partners" ? "class='active'" : ""%>><a href="/projects/<%=project['iatiId']%>/partners">Partners</a></li>
                            <% end %>
                        </ul>
                    </nav>
                </div>          
            </div>
        </div>
    </div>
</div>